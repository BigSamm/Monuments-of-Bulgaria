@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>MB - WebApplication</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="/css/grayscale.min.css" rel="stylesheet">
</head>
<body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <a class="navbar-brand js-scroll-trigger pl-3" href="/">Home</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <partial name="_LoginPartial" />
            <ul class="navbar-nav ml-3">
                <li class="nav-item">
                    <a asp-controller="Oblasts" asp-action="All" class="nav-link">Oblasts</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Monuments" asp-action="All" class="nav-link">Monuments</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Hotels" asp-action="All" class="nav-link">Hotels</a>
                </li>
                @if (this.User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a asp-controller="Trips" asp-action="Create" class="nav-link">Create Trip</a>
                    </li>
                }
                @if (this.User.IsInRole(MB.Common.GlobalConstants.AdminRoleName))
                {
                    <li>
                        <div class="dropdown show">
                            <a class="nav-link dropdown-toggle" role="button" id="administration" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false" style="cursor: pointer;">
                                Administration
                            </a>
                            <div class="dropdown-menu" aria-labelledby="administration">
                                <a asp-controller="Monuments" asp-action="Add" class="dropdown-item">Add Monument</a>
                                <a asp-controller="Hotels" asp-action="Add" class="dropdown-item">Add Hotel</a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <!-- Header -->
    <header class="masthead">
        <div class="container d-flex h-100 align-items-center">
            <div class="mx-auto text-center">
                <h1 class="mx-auto my-0">Monuments of Bulgaria</h1>
                <h2 class="text-white-50 mx-auto mt-3">A free web app for bulgarian monuments divided by oblasts.</h2>
            </div>
        </div>
    </header>
    <!-- Info Section -->
    <section id="projects" class="projects-section">
        <div class="container">
            <div class="row align-items-center no-gutters">
                <div class="col-xl-7 col-lg-7">
                    <a href="https://res.cloudinary.com/dpoafu9y0/image/upload/v1546636699/monuments/default.jpg" target="_blank">
                        <img class="img-fluid mb-3 mb-lg-0" src="https://res.cloudinary.com/dpoafu9y0/image/upload/v1546636699/monuments/default.jpg" alt="National-Park-Museum-Shipka" />
                    </a>
                </div>
                <div class="col-xl-5 col-lg-5">
                    <div class="featured-text text-center text-lg-left">
                        <h4><a asp-controller="Monuments" asp-action="All">Monuments</a></h4>
                        <p class="text-white-50 mb-0">
                            You can see information, photos and people opinions about monuments in Bulgaria. They can be natural or created by people. Part of them become a realy important part of bulgarian history.
                        </p>
                    </div>
                </div>
            </div>
            <div class="mb-5 mt-5" style="height: 1px"></div>
            <div class="row justify-content-center no-gutters mb-5 mb-lg-0">
                <div class="col-lg-6">
                    <a href="https://res.cloudinary.com/dpoafu9y0/image/upload/v1546636605/hotels/default.jpg" target="_blank">
                        <img class="img-fluid w-100 h-100" src="https://res.cloudinary.com/dpoafu9y0/image/upload/v1546636605/hotels/default.jpg" alt="hotel-default-photo" />
                    </a>
                </div>
                <div class="col-lg-6">
                    <div class="bg-black text-center h-100 project">
                        <div class="d-flex h-100">
                            <div class="project-text w-100 my-auto text-center text-lg-left">
                                <h4><a asp-controller="Hotels" asp-action="All">Hotels</a></h4>
                                <p class="mb-0 text-white-50">
                                    You can see information and photos for every hotel. Can choose best for your needs based on people opinions
                                    presented by their reviews and comments.
                                </p>
                                <hr class="d-none d-lg-block mb-0 ml-0">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center no-gutters">
                <div class="col-lg-6">
                    <a href="https://res.cloudinary.com/dpoafu9y0/image/upload/v1546637494/trips/default.jpg" target="_blank">
                        <img class="img-fluid h-75 w-100" src="https://res.cloudinary.com/dpoafu9y0/image/upload/v1546637494/trips/default.jpg" alt="trip-default-photo">
                    </a>
                </div>
                <div class="col-lg-6 order-lg-first">
                    <div class="bg-black text-center h-100 project">
                        <div class="d-flex h-75">
                            <div class="project-text w-100 my-auto text-center text-lg-right">
                                <h4><a asp-controller="Trips" asp-action="Create">Trips</a></h4>
                                <p class="mb-0 text-white-50">
                                    You can create your own trips with photos and descriptions. Can check best place for trip by read others opinions about monuments and hotels. Can represent your own vision by reviews and comments.
                                </p>
                                <hr class="d-none d-lg-block mb-0 mr-0">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section -->
    <section class="contact-section bg-black">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-map-marked-alt text-primary mb-2"></i>
                            <h4 class="text-uppercase m-0">Address</h4>
                            <hr class="my-4">
                            <div class="small text-black-50">block 61, 1734 Studentski Kompleks, Sofia</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-envelope text-primary mb-2"></i>
                            <h4 class="text-uppercase m-0">Email</h4>
                            <hr class="my-4">
                            <div class="small text-black-50">
                                <a href="https://mail.google.com">atanasov.zdr@gmail.com</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-mobile-alt text-primary mb-2"></i>
                            <h4 class="text-uppercase m-0">Phone</h4>
                            <hr class="my-4">
                            <div class="small text-black-50">+359 88 802 0177</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="social d-flex justify-content-center">
                <a href="https://www.facebook.com/" target="_blank" class="mx-2 fb">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="https://www.instagram.com" target="_blank" class="mx-2 inst">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="https://github.com/" target="_blank" class="mx-2 git">
                    <i class="fab fa-github"></i>
                </a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black text-center text-white-50">
        <div class="container">Copyright &copy; Monuments of Bulgaria - @DateTime.Now.Year</div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for this template -->
    <script src="/js/grayscale.min.js"></script>
</body>
</html>


