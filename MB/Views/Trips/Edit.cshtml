@model MB.ViewModels.Trips.TripEditViewModel
@{ ViewData["Title"] = "Edit Trip"; }

<h1 class="text-center text-dark">@ViewData["Title"]</h1>

<div class="mt-4 d-flex justify-content-center marginBottom">
    <form asp-controller="Trips" asp-action="Edit" method="post" class="col-6 text-dark" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.Id" />
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" placeholder="Name..." />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description"></label>
            <textarea asp-for="@Model.Description" rows="5" class="form-control" placeholder="Description..."></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <div class="col-5 p-0">
                <label asp-for="@Model.SelectedMonumentId"></label>
                <select class="form-control single-select" asp-for="@Model.SelectedMonumentId" asp-items="@Model.Monuments"></select>
                <span asp-validation-for="@Model.SelectedMonumentId" class="text-danger"></span>
            </div>
            <div class="col-5 p-0">
                <label asp-for="@Model.SelectedHotelId"></label>
                <select class="form-control single-select" asp-for="@Model.SelectedHotelId" asp-items="@Model.Hotels"></select>
                <span asp-validation-for="@Model.SelectedHotelId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="@Model.Photo">Upload Photo</label>
            <input asp-for="@Model.Photo" type="file" class="form-control-file" />
            <span asp-validation-for="@Model.Photo" class="text-danger font-weight-bold"></span>
        </div>
        <div class="d-flex justify-content-center mt-5">
            <button type="submit" class="btn btn-dark">@ViewData["Title"]</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/singleSelect.js"></script>
}
