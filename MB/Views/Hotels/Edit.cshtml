@model MB.ViewModels.Hotels.HotelEditViewModel
@{ ViewData["Title"] = "Edit Hotel"; }

<h1 class="text-center text-dark">@ViewData["Title"]</h1>

<div class="mt-4 d-flex justify-content-center marginBottom">
    <form asp-controller="Hotels" asp-action="Edit" method="post" class="col-6 text-dark">
        <input type="hidden" asp-for="@Model.Id" />
        <div class="d-flex justify-content-between">
            <div class="form-group col-5 p-0">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" placeholder="Name..." />
                <span asp-validation-for="@Model.Name" class="text-danger font-weight-bold"></span>
            </div>
            <div class="form-group col-5 p-0">
                <label asp-for="@Model.Stars"></label>
                <input asp-for="@Model.Stars" min="1" max="5" step="1" class="form-control" placeholder="1 to 5..." />
                <span asp-validation-for="@Model.Stars" class="text-danger font-weight-bold"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description"></label>
            <textarea asp-for="@Model.Description" rows="5" class="form-control" placeholder="Description..."></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger font-weight-bold"></span>
        </div>
        <div class="d-flex justify-content-between">
            <div class="form-group col-5 p-0">
                <label asp-for="@Model.Address"></label>
                <input asp-for="@Model.Address" class="form-control" placeholder="Address..." />
                <span asp-validation-for="@Model.Address" class="text-danger font-weight-bold"></span>
            </div>
            <div class="form-group col-5 p-0">
                <label asp-for="@Model.PhoneNumber"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Phone number..." />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger font-weight-bold"></span>
            </div>
        </div>
        <div class="col-5 p-0">
            <label asp-for="@Model.SelectedOblastId"></label>
            <select class="form-control single-select" asp-for="@Model.SelectedOblastId"
                    asp-items="@Model.Oblasts">
                <option disabled selected>Choose oblast</option>
            </select>
            <span asp-validation-for="@Model.SelectedOblastId" class="text-danger font-weight-bold"></span>
        </div>
        <div class="d-flex justify-content-center mt-5">
            <button type="submit" class="btn btn-dark">@ViewData["Title"]</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
